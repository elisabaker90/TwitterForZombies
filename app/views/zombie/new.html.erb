<%= form_for @zombie, :url => {:action => :create} do |f| %>
	
	<% if session[:zombie].nil? %>
		Name: <br />
		<%= f.text_field :name %> <br />
		Graveyard: <br />
		<%= f.text_field :graveyard %> <br />

		<%= f.submit 'Submit Zombie' %>
	<% else %>
		You cannot create a new Zombie if you are currently logged in.
	<% end %>


<% end %>

<%= link_to 'New Zombie', new_zombie_path %>
<%= link_to 'New Tweet', new_tweet_path %>
<%= link_to 'All Zombies', zombie_index_path %>
<%= link_to 'All Tweets', tweet_index_path %>