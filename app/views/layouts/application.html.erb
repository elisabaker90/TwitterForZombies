	<% if session[:zombie].nil?%>
		<button class = "btn"><%= link_to "Log In!", sessions_path %></button>
	<% else %>
		<button class = "btn"><%= link_to "Log Out!", new_session_path%></button>
	<% end %> -->

</body>
<script type = "text/javascript">
	$('.dropdown-toggle').dropdown();
</script>
</html>


